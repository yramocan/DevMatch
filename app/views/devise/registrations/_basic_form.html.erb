<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'new_basic_user'}) do |f| %>
  <%= devise_error_messages! %>
  
  <%= hidden_field_tag 'plan', params[:plan] %>

  <div class="well">
    <%= render "form" %>
  
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
    
  </div>
<% end %>